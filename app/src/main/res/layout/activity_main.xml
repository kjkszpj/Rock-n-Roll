<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".main">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Clear"
        android:id="@+id/button_clear"
        android:layout_centerVertical="true"
        android:layout_alignRight="@+id/button_new_item"
        android:layout_alignEnd="@+id/button_new_item"
        android:layout_alignLeft="@+id/button_new_item"
        android:layout_alignStart="@+id/button_new_item"
        android:onClick="clear"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Item"
        android:id="@+id/button_new_item"
        android:layout_below="@+id/button_clear"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:onClick="add"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ROCK!"
        android:id="@+id/button_rock"
        android:layout_below="@+id/button_new_item"
        android:layout_marginTop="16dp"
        android:layout_alignRight="@+id/button_new_item"
        android:layout_alignEnd="@+id/button_new_item"
        android:layout_alignLeft="@+id/button_new_item"
        android:layout_alignStart="@+id/button_new_item"
        android:onClick="rock"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/output"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="84dp"
        />
</RelativeLayout>
